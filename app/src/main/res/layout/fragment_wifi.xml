<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutWifi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WifiFragment">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:textAlignment="center"
        app:flow_horizontalAlign="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/wifiDescriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="24dp"
            android:text="Enter your local wifi network's information."
            android:textSize="18dp" />

        <EditText
            android:id="@+id/wifiInputNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="24dp"
            android:ems="10"
            android:hint="Wifi Name"
            android:inputType="textPersonName"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/wifiInputPasswordText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:ems="10"
            android:hint="Wifi Password"
            android:inputType="textPassword"
            android:textSize="20dp" />

        <Button
            android:id="@+id/wifiConnectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="Connect Wifi"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/wifiDocumentation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="10dp"
            android:text="    How to connect personal wifi network"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/wifiDescriptionTextStep1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:text="Step 1: Plug in the smart switch."
            android:textSize="15dp" />
        <TextView
            android:id="@+id/wifiDescriptionTextStep2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:text="Step 2: Connect your device to the Shelly network."
            android:textSize="15dp" />
        <TextView
            android:id="@+id/wifiDescriptionTextStep3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:text="Step 3: Once connected, enter your wifi name and password above and press the CONNECT WIFI button."
            android:textSize="15dp" />
        <TextView
            android:id="@+id/wifiDescriptionTextStep4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:text="Step 4: Restart the app and then connect your device to wifi you wish to use."
            android:textSize="15dp" />
        <TextView
            android:id="@+id/wifiDescriptionTextStep5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:text="Step 5: Re-open the app and now your Bed Shaker App is ready to be used."
            android:textSize="15dp" />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>